{
  "name": "swifty-api",
  "version": "1.0.0",
  "description": "Swifty API - A Node.js API project",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint . --ext .js --config .eslintrc.cjs",
    "lint:fix": "eslint . --ext .js --fix --config .eslintrc.cjs",
    "format": "prettier --write \"**/*.{js,json,md,cjs}\"",
    "prepare": "[ -n \"$CI\" ] || husky install",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "keywords": [
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "amqplib": "^0.10.9",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
